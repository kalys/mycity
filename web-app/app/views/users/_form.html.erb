<div class="row">
	<div class="col-md-offset-2">
		<%= form_for @user do |f| %>
			<div>
				<%= f.label :name %>
				<%= f.text_field :name %>
			</div>

			<div>
				<%= f.label :email %>
				<%= f.email_field :email %>
			</div>

			<div>
				<%= f.label :password %>
				<%= f.password_field :password %>
			</div>
		<% end %>
	</div>
</div>