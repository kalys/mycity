<h1 class="page-header text-center">Все пользователи</h1>

<table class="table">
	<tr>
		<th>Имя</th>
		<th>Почта</th>
		<th>Действия</th>
	</tr>

	<% @users.each do |user| %>
		<tr>
			<td><%= user.name %></td>
			<td><%= user.email %></td>
			<td>

				<%= link_to "Удалить", user_path(user.id), method: "delete" unless user.admin? %>

			</td>
		</tr>
	<% end %>
</table>
