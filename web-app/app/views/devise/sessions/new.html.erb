<div class="col-sm-4">
  <h2 class="page-header">Вход</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password, "Пароль" %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label "Запомнить меня" %>
      </div>
    <% end -%>

    <div class="form-group">
      <%= f.submit "Войти", class: "btn btn-success" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
<div class="col-sm-2"></div>
<div class="col-sm-6 text-center">
  <h2 class="page-header">RSS</h2>
  <div class="breadcrumb">
    <% @messages.each do |message| %>
      <h2><%= link_to message.body.truncate(30, separator: ' '), message_path(message.id) %></h2>
    <% end %>
  </div>

</div>
