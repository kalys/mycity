<div class="col-sm-4">
	<h2><%= t 'devise.invitations.edit.header' %></h2>

	<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| %>
	  <%= devise_error_messages! %>
	  <%= f.hidden_field :invitation_token %>
	  <%= f.hidden_field :role_id, value: 2 %>

	  <div class="form-group">
	  	<%= f.label :name %>
	  	<%= f.text_field :name, required: true, class: "form-control" %>
	  </div>
	  <div class="form-group">
		  <% if f.object.class.require_password_on_accepting %>
		  <p><%= f.label :password %><br />
		  <%= f.password_field :password, required: true, class: "form-control" %></p>
		</div>
		<div class="form-group">
		  <p><%= f.label :password_confirmation %><br />
		  <%= f.password_field :password_confirmation, required: true, class: "form-control" %></p>
		  <% end %>
		</div>
	  <p><%= f.submit t("devise.invitations.edit.submit_button"), class: "btn btn-md btn-success" %></p>
	<% end %>
</div>