<script src="//maps.google.com/maps/api/js?key=AIzaSyBRkajFk38d_24oT0mo8rkMWb1_fJHSMW8"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

<% @status_list = ['Новые сообщения', 'Выполнено', 'Актуальные сообщения', 'скрыто', 'Неактуальные сообщения'] %>

<div class="row">
	<div class="col-md-12">
		<h2>
			<%= @status_list[params[:status].to_i] if params[:status] != "all" %>
			<%= "Все сообщения" if params[:status] == "all" %>
		</h2>
		<hr />
	</div>
	<div class="col-md-6">
		<% if !params[:status].nil? %>
			<% if params[:status] == "all" %>
				<%= render "messages/index/unsorted_list" %>
			<% else %>
				<%= render "messages/index/sorted_list" %>
			<% end %>
		<% end %>
	</div>


  <div class="col-md-6">
    <div style='width: 585px; position: fixed;'>
	  	<div class="btn-group btn-group-justified">
				<%= link_to "New", messages_path(status: 0), class: "btn btn-info" %>
				<%= link_to "Done", messages_path(status: 1), class: "btn btn-success" %>
				<%= link_to "All", messages_path(status: "all"), class: "btn btn-primary" %>
				<%= link_to "Actual", messages_path(status: 2), class: "btn btn-warning" %>
				<%= link_to "Not Relevant", messages_path(status: 4), class: "btn btn-default" %>
	  	</div>
      <hr>
      <div id="map" style='width: 585px; height: 450px;'></div>
    </div>
  </div>

</div>

<script type="text/javascript">
    handler = Gmaps.build('Google');
    handler.buildMap({ provider: {mapTypeId: 'hybrid'}, internal: {id: 'map'}}, function(){
        markers = handler.addMarkers(<%=raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
    });
</script>
