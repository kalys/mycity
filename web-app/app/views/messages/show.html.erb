<script src="//maps.google.com/maps/api/js?key=AIzaSyBRkajFk38d_24oT0mo8rkMWb1_fJHSMW8"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

<div class="col-md-offset-1 col-md-10">
	<div class="breadcrumb">
		<div class="row">
			<div class="col-md-8">
				<div class="desc">
					<h1>Lat: <%= @message.latitude %>
							Lng: <%= @message.longitude %><br />
							Adds: <%= @message.address %>
					</h1>
					<h3>
						<p> <b> Description: </b> </p> 
						<p>	<%= @message.body %>  </p>
						<hr>
						<p>Status: <b><%= @message.status %></b></p>
					</h3>
						<%= render partial: 'change_status', locals: { message: @message } %>
				</div>
			</div>
			<div class="col-md-4">
				<% @message.images.each do |image| %>
					<%= image_tag(image.image_url, size: 300, class: 'problem_image') %>
				<% end %>
			</div>
		</div>

		<div class="row">

			<div class="jumbotron">
				<div style='width: 800px;'>
				  <div id="map" style='width: 800px; height: 400px;'></div>
				</div>
			</div>

		</div>
	</div>
</div>

<script type="text/javascript">
	handler = Gmaps.build('Google');
	handler.buildMap({ provider: {mapTypeId: 'hybrid'}, internal: {id: 'map'}}, function(){
	  markers = handler.addMarkers(<%=raw [{:lat=>@message.latitude, :lng=>@message.longitude, :infowindow=>@message.address}].to_json %>);
	  handler.bounds.extendWith(markers);
	  handler.fitMapToBounds();
	});
</script>