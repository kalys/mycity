<h1>Архивные категории</h1>
<table class="table">
	<tr>
		<th>Название</th>
		<th>Действия</th>
	</tr>

	<% @categories.each do |category| %>
		<tr>
			<td><%= category.title %></td>
			<td><%= link_to 'Восстановить', unarchiving_category_path(category), method: :post, id: "unarchiving_category_#{category.id}" %></td>
		</tr>
	<% end %>
</table>
<%= link_to "Показать все категории", categories_path %>
