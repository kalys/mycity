<h1>Категории</h1>
<table class="table">
	<tr>
		<th>Название</th>
		<th>Действия</th>
	</tr>

	<% @categories.each do |category| %>
		<tr>
			<td><%= category.title %></td>
			<td><%= link_to 'Архивировать', archiving_category_path(category), method: :post %></td>
			<td><%= link_to 'Обновить', edit_category_path(category), class: 'update', id: category.id %></td>
		</tr>
	<% end %>
	
</table>
<p><%= link_to "Добавить новую категорию", new_category_path, class: "btn btn-success" %></p>
<p><%= link_to "Показать архивные категории", archived_categories_path %></p>